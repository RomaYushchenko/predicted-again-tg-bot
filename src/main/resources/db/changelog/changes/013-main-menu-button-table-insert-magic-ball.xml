<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="013" author="yushchenko">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="main_menu_buttons"/>
        </preConditions>

        <insert tableName="main_menu_buttons">
            <column name="id" valueComputed="gen_random_uuid()"/>
            <column name="button_label" value="🔮 Магічна куля"/>
            <column name="command" value="/magic_ball"/>
            <column name="is_released" valueBoolean="false"/>
            <column name="sort_order" value="1"/>
            <column name="row_number" value="2"/>
        </insert>
    </changeSet>

    <changeSet id="013.01" author="yushchenko">
        <update tableName="main_menu_buttons">
            <column name="row_number" value="999"/>
            <where>command = '/settings'</where>
        </update>
    </changeSet>

</databaseChangeLog>